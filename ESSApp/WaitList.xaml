<Window x:Class="ESSApp.WaitList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WaitList" Height="300" Width="300">
    <Grid>
        <Label Content="Pick a machine that you would like to wait for:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="Mill" Content="Mill" HorizontalAlignment="Left" Margin="20,52,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="Lathe" Content="Lathe" HorizontalAlignment="Left" Margin="20,82,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Left" Margin="207,239,0,0" VerticalAlignment="Top" Width="75" Click="OK_Click"/>
        <Label Content="" HorizontalAlignment="Left" Margin="20,239,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
